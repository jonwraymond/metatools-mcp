{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aperturestack.dev/schemas/config.schema.json",
  "title": "Config",
  "description": "metatools-mcp configuration schema",
  "type": "object",
  "properties": {
    "server": {
      "type": "object",
      "properties": {
        "name": {"type": "string", "default": "metatools-mcp"},
        "version": {"type": "string", "default": "dev"}
      }
    },
    "transport": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["stdio", "streamable", "sse"],
          "default": "stdio"
        },
        "http": {
          "type": "object",
          "properties": {
            "host": {"type": "string", "default": "0.0.0.0"},
            "port": {"type": "integer", "minimum": 1, "maximum": 65535, "default": 8080},
            "tls": {
              "type": "object",
              "properties": {
                "enabled": {"type": "boolean", "default": false},
                "cert": {"type": "string"},
                "key": {"type": "string"}
              }
            }
          }
        },
        "streamable": {
          "type": "object",
          "properties": {
            "stateless": {"type": "boolean", "default": false},
            "json_response": {"type": "boolean", "default": false},
            "session_timeout": {"type": "string", "default": "30m"}
          }
        }
      }
    },
    "search": {
      "type": "object",
      "properties": {
        "strategy": {
          "type": "string",
          "enum": ["bm25", "lexical", "semantic"],
          "default": "lexical"
        },
        "bm25": {
          "type": "object",
          "properties": {
            "name_boost": {"type": "integer", "default": 3},
            "namespace_boost": {"type": "integer", "default": 2},
            "tags_boost": {"type": "integer", "default": 2},
            "max_docs": {"type": "integer", "default": 0},
            "max_doctext_len": {"type": "integer", "default": 0}
          }
        }
      }
    },
    "execution": {
      "type": "object",
      "properties": {
        "timeout": {"type": "string", "default": "30s"},
        "max_tool_calls": {"type": "integer", "minimum": 1, "default": 64},
        "max_chain_steps": {"type": "integer", "minimum": 1, "default": 8}
      }
    },
    "providers": {
      "type": "object",
      "properties": {
        "search_tools": {
          "type": "object",
          "properties": {"enabled": {"type": "boolean", "default": true}}
        },
        "list_namespaces": {
          "type": "object",
          "properties": {"enabled": {"type": "boolean", "default": true}}
        },
        "describe_tool": {
          "type": "object",
          "properties": {"enabled": {"type": "boolean", "default": true}}
        },
        "list_tool_examples": {
          "type": "object",
          "properties": {"enabled": {"type": "boolean", "default": true}}
        },
        "run_tool": {
          "type": "object",
          "properties": {"enabled": {"type": "boolean", "default": true}}
        },
        "run_chain": {
          "type": "object",
          "properties": {"enabled": {"type": "boolean", "default": true}}
        },
        "execute_code": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean", "default": false},
            "sandbox": {"type": "string", "default": "dev"}
          }
        }
      }
    },
    "backends": {
      "type": "object",
      "properties": {
        "local": {
          "type": "object",
          "properties": {
            "enabled": {"type": "boolean", "default": true},
            "paths": {"type": "array", "items": {"type": "string"}},
            "watch": {"type": "boolean", "default": false}
          }
        }
      }
    },
    "middleware": {
      "type": "object",
      "properties": {
        "chain": {"type": "array", "items": {"type": "string"}, "default": []},
        "configs": {"type": "object", "additionalProperties": {"type": "object"}}
      }
    }
  }
}
